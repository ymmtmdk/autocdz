file 'zmove' do
  sh "crystal build --release zmove.cr"
  sh "strip zmove"
end

file 'zadd' do
  sh "crystal build --release zadd.cr"
  sh "strip zadd"
end

task :install do
  sh "cp zmove zadd ~/bin"
end

task :go do
  sh 'go build -ldflags="-s -w" -trimpath zadd.go'
  sh 'go build -ldflags="-s -w" -trimpath zmove.go'
end

task :default => ['zmove', 'zadd']

